COPY
(SELECT
	employee_name,
	SUM(revenue) as revenue,
	SUM(number_order) as number_order,
	SUM(profit) as profit
FROM
	view_store_city_employee_cus
GROUP BY
	employee_name,
	employee_id
ORDER BY
	employee_id)
TO '/home/thangquang/tmp/employee_rev_pro_num.csv' DELIMITER ',' CSV HEADER;

